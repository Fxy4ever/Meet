<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/summer_sm_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="0dp"
    android:backgroundTint="#E9E9E9"
    app:cardElevation="0dp"
    android:transitionName="share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/summer_sm_item_title"
                android:text="这是标题"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/summer_sm_item_content"
                android:text="这是内容"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <FrameLayout
                android:gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/summer_sm_item_time"
                    android:text="2018-04-05"
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:id="@+id/summer_sm_item_avatar"
                        android:src="@drawable/summer_user_avatar"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:id="@+id/summer_sm_item_name"
                        android:text="这是作者名字"
                        android:visibility="gone"
                        android:layout_gravity="left|center"
                        android:textSize="14sp"
                        android:layout_marginLeft="6dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/summer_sm_item_play"
                        android:background="@drawable/summer_icon_play"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:id="@+id/summer_sm_item_play_time"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/summer_sm_item_like"
                        android:visibility="gone"
                        android:background="@drawable/summer_icon_like"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:id="@+id/summer_sm_item_likeNum"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/summer_sm_item_com"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/summer_icon_comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:id="@+id/summer_sm_item_comNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/summer_sm_item_img"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:background="#DCDCDC"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</android.support.v7.widget.CardView>