<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.AboutActivity">
        <android.support.v7.widget.Toolbar
            app:navigationIcon="@drawable/summer_icon_back"
            android:id="@+id/summer_about_tl"
            android:background="@drawable/summer_login_backgroud_shape"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >
            <TextView
                android:text="关于"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/summer_logo"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:text="知遇"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="一款基于Material Design 的社交聊天软件"
                android:layout_gravity="center"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="v 1.0.0"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/summer_about_check"
            android:layout_gravity="bottom|center"
            android:text="检查更新"
            android:background="@null"
            android:textColor="#3E89CF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</layout>