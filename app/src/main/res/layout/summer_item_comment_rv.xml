<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/summer_comment_avatar"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/summer_user_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp" />
            <TextView
                android:id="@+id/summer_comment_name"
                tools:text="fxymine4ever"
                android:layout_marginLeft="10dp"
                android:textColor="#505050"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/summer_comment_time"
                tools:text="2018:02:03"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/summer_comment_play"
            android:background="@drawable/summer_icon_play"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/summer_comment_playTime"
            android:layout_gravity="right|center"
            tools:text="2s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/summer_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</LinearLayout>